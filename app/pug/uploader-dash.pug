extends templates/uploader-layout
block header
  - var pageTitle = 'Dashboard'
  include templates/uploader-header
block main

  .mdl-grid.width100
    .upl-card-container.mdl-cell--12-col.mdl-grid
      .small-title.mdl-cell.mdl-cell--12-col Success metrics
      +infocard('storageCard', 'Used space', 'storage', '99/100 GB', 'warning', 'Recommendation')
      +infocard('gameCard', 'Money earned', 'monetization_on', '326 EUR', 'attach_money', 'Withdraw')
      +infocard('pizzaCard', 'Video views', 'remove_red_eye', 'Total: 560', 'search', 'Add keywords')
      +infocard('loveCard', 'New followers', 'people', '180', 'lightbulb_outline', 'Recommendation')
      +infocard('vidsCard', 'Total videos', 'video_library', '14', 'show_chart', 'Most popular: Winter in Alps')
    .upl-card-container.mdl-cell--12-col.mdl-grid
      .small-title.mdl-cell.mdl-cell--12-col Recent activities
      .mdl-cell.mdl-cell--12-col 15/05/2017 15:53: Purchase: "Winter in Alps" 
      .mdl-cell.mdl-cell--12-col 14/05/2017 15:43: Uploaded video "Stockholm streets"
      .mdl-cell.mdl-cell--12-col 13/05/2017 05:55: Published video "Winter in Alps"
      .mdl-cell.mdl-cell--12-col 12/05/2017 15:53: Uploaded video "Formula1 Grand Prix"
      .mdl-cell.mdl-cell--12-col 11/05/2017 07:12: Uploaded video "Green screen iPad"
      .mdl-cell.mdl-cell--12-col 10/05/2017 12:33: Uploaded video "Winter in Alps"
      

mixin infocard (id, title, cardIcon, data, hintIcon, cardHint)
  .mdl-cell.mdl-cell--12-col-phone.mdl-cell--4-col-tablet.mdl-cell--3-col
    .upl-dash-card.mdl-card(id=id)
      .card-title #{title}
      .card-icon
        i.material-icons #{cardIcon}
      .card-data #{data}
      hr
      .card-hint 
        i.material-icons #{hintIcon}
        a(href="#") #{cardHint}
