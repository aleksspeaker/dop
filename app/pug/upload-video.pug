extends templates/website-layout
block header
  include templates/header-mini
block main
  #backshape
  .mdl-grid
    .medium-title.mdl-cell.mdl-cell--12-col Upload your video
    // Left section with Author's infi/bio
    .card-cont.mdl-cell.mdl-cell--12-col  

        .video-holder.mdl-card__media
          i.placeholder-icon.material-icons local_movies
        .mdl-card__actions
          button.mdl-button.mdl-button--colored
            i.material-icons file_upload
            | &nbsp Upload footage
    

        .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          input#video-name.mdl-textfield__input(type="text")
          label.mdl-textfield__label(for="video-name") Add video title
        
        // Select with arrow
        
        .category-box
          #cat1
            .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.getmdl-select.getmdl-select__fix-height
              input#video-category1.mdl-textfield__input(type='text', readonly='', tabindex='-1' size="100")
              label(for='video-category1')
                i.mdl-icon-toggle__label.material-icons keyboard_arrow_down
              label.mdl-textfield__label(for='video-category1') Category 1
              ul.mdl-menu.mdl-menu--bottom-left.mdl-js-menu(for='video-category1')
                li.mdl-menu__item(data-val='DE') Space
                li.mdl-menu__item(data-val='BY') Nature
                li.mdl-menu__item(data-val='RU') Entertainment
          #cat2
            .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.getmdl-select.getmdl-select__fix-height
              input#video-category2.mdl-textfield__input(type='text', readonly='', tabindex='-1' size="100")
              label(for='video-category2')
                i.mdl-icon-toggle__label.material-icons keyboard_arrow_down
              label.mdl-textfield__label(for='video-category2') Category 2
              ul.mdl-menu.mdl-menu--bottom-left.mdl-js-menu(for='video-category2')
                li.mdl-menu__item(data-val='DE') Space
                li.mdl-menu__item(data-val='BY') Nature
                li.mdl-menu__item(data-val='RU') Cities
            button#add-category-btn.mdl-button.mdl-js-button.mdl-button--icon(onclick='addCategory()')
              i.material-icons add_circle_outline
            .mdl-tooltip(data-mdl-for="add-category-btn") Add another category
        // Price
        #price-currency-box
          #price-box
            .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
              input#video-price.mdl-textfield__input(type="text" size="100" pattern="-?[0-9]*(\.[0-9]+)?")
              label.mdl-textfield__label(for="video-price") Price
              span.mdl-textfield__error Price should be a number!
          #currency-box
              .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.getmdl-select.getmdl-select__fix-height
                input#currency.mdl-textfield__input(type='text', readonly='', tabindex='-1' size="100")
                label(for='currency')
                  i.mdl-icon-toggle__label.material-icons keyboard_arrow_down
                label.mdl-textfield__label(for='currency') Currency
                ul.mdl-menu.mdl-menu--bottom-left.mdl-js-menu(for='currency')
                  li.mdl-menu__item(data-val='DE') EUR
                  li.mdl-menu__item(data-val='BY') USD
                  li.mdl-menu__item(data-val='RU') JPY
        // End of Price    

      


        // Description
        .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          textarea#video-description.mdl-textfield__input(type='text', rows='3')
          label.mdl-textfield__label(for='video-description') Add description
        // End of Description


        // Keywords
        .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          input#video-keywords.mdl-textfield__input(type="text")
          label.mdl-textfield__label(for="#video-keywords") Keywords
        // End of Keywords

        // Content owner
        .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          input#video-name.mdl-textfield__input(type="text")
          label.mdl-textfield__label(for="video-name") Content owner
        // End of Content owner
        // Buttons
        #video-btn-box
          button.mdl-button.mdl-js-button.mdl-js-ripple-effect.mdl-button--primary.mdl-button--raised Save

          button.mdl-button.mdl-js-button.mdl-js-ripple-effect.mdl-button--accent.mdl-button--raised Publish
        // End of Buttons