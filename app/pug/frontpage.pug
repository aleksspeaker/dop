      span#often-searches-title.mdl-cell.mdl-cell--12-col  Popular searches:
      span#often-searches-list.mdl-cell.mdl-cell--12-col
        ul
          li
            a(href="#") street
          li
            a(href="#") sky
          li
            a(href="#") animals
          li
            a(href="#") cars
          li
            a(href="#") New York
    

    dialog.mdl-dialog.cart
      h4.mdl-dialog__title Shopping cart
      .mdl-dialog__content
        p
          | Your shopping cart is empty.
      .mdl-dialog__actions
        button.mdl-button(type='button' disabled) checkout
        button.mdl-button.close(type='button') continue shopping
    script.
      var dialog = document.querySelector('dialog');
      var showDialogButton = document.querySelector('#show-dialog');
      if (! dialog.showModal) {
      dialogPolyfill.registerDialog(dialog);
      }
      showDialogButton.addEventListener('click', function() {
      dialog.showModal();
      });
      dialog.querySelector('.close').addEventListener('click', function() {
      dialog.close();
      });


    // CATEGORIES
    .mdl-grid(style="background: rgba(255,255,250,1); margin-top: 50vh;")
      .medium-title.mdl-cell.mdl-cell--12-col Latest footage
        // Image card
      
      .demo-card-image.mdl-card.mdl-shadow--2dp.mdl-cell
        .mdl-card__title.mdl-card--expand
        .mdl-card__actions
          span.demo-card-image__filename Image.jpg

video#video.fullscreen(preload muted volume="0") //autoplay off
  source(src="./videos/river.mp4")

script.
  var myvid = document.getElementById('video');
  var myvids = [
    "./videos/river.mp4", 
    "./videos/plant.mp4",
    "./videos/bubble.mp4",
    "./videos/street.mp4"
    ];
  var activeVideo = 0;

  myvid.addEventListener('ended', function(e) {
    // update the new active video index
    activeVideo = (++activeVideo) % myvids.length;

    // update the video source and play
    myvid.src = myvids[activeVideo];
    myvid.play();
  });