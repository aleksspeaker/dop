mixin messages(btnclass, icon, number, person, subject, message, date)
            tr
              td.mdl-data-table__cell--non-numeric
                button.mdl-button.mdl-js-button.mdl-js-ripple-effect.mdl-button--icon(class=btnclass)
                  i.material-icons.mdl-icon-toggle #{icon}
              td.mdl-data-table__cell--non-numeric #{number}
              td.mdl-data-table__cell--non-numeric #{person}
              td.mdl-data-table__cell--non-numeric #{subject}
              td.mdl-data-table__cell--non-numeric #{message}
              td #{date}


- var page_title = 'Messages'

include templates/layout
  .mdl-tabs.mdl-js-tabs.mdl-js-ripple-effect
