      a.mdl-tabs__tab.is-active(href='#mess-opened') Opened
      a.mdl-tabs__tab(href='#mess-resolved') Resolved
    #mess-opened.mdl-tabs__panel.is-active
      .mdl-grid       
        .mdl-cell.mdl-cell--12-col
          table#messages-table.mdl-data-table.mdl-js-data-table
